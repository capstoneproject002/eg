.panel.panel-default
  .panel-heading
    %i.icon-edit.icon-large
    = yield :form_title
  .panel-body
    = simple_form_for([:hq, @semester]) do |f|
      = f.error_notification

      .form-inputs
        = f.input :year, collection: (2014..2030).to_a
        = f.input :semester

      .form-actions
        = f.button :submit, class: 'btn btn-default'
        = link_to t('cancel'), hq_semesters_path, class: 'btn'
