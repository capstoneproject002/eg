- content_for :toolbar do
  = link_to edit_hq_semester_path(@semester ), class: 'btn btn-default' do
    %i.icon-pencil
    = t('action_button.edit')
.panel.panel-default
  .panel-heading
    %i.icon-edit.icon-large
    = t('tt.show', resource_name: Semester.model_name.human)
  .panel-body
    = show_for @semester do |s|
      = s.attribute :name
      = s.attribute :year
      = s.attribute :semester do
        = @semester.semester.text
