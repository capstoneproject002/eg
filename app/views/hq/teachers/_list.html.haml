.panel-heading
  %i.icon-table.icon-large
  = t('tt.index', resource_name: Teacher.model_name.human)
  .panel-tools
    .btn-group
      %a.btn{href: hq_teachers_path, data: {toggle: 'toolbar-tooltip'}, title: 'Reload'}
        %i.icon-refresh
    .badge= @teachers.total_entries
.panel-body.filters
  -#= render 'filters'
%table.table
  %thead
    %tr
      -#%th #
      %th= t('activerecord.attributes.teacher.name')
      %th= t('activerecord.attributes.teacher.email')
      %th= t('activerecord.attributes.teacher.created_at')
      %th.actions

  %tbody
    = render @teachers