.panel.panel-default
  .panel-heading
    %i.icon-edit.icon-large
    = yield :form_title
  .panel-body
    = simple_form_for(@attachment) do |f|
      = f.error_notification

      .form-inputs
        = f.input :title
        = f.association :class_room, collection: current_user.class_rooms
        = f.input :file, as: :file

      .form-actions
        = f.button :submit, class: 'btn btn-default'
        = link_to t('cancel'), attachments_path, class: 'btn'
