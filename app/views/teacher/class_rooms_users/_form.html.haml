.panel.panel-default
  .panel-heading
    %i.icon-edit.icon-large
    = yield :form_title
  .panel-body
    = simple_form_for([:teacher, @class_room_user]) do |f|
      = f.error_notification

      .form-inputs
        = f.input :gpa
        = f.input :score
        = f.input :attendance

      .form-actions
        = f.button :submit, class: 'btn btn-default'
        = link_to t('cancel'), teacher_class_room_path(@class_room_user.class_room), class: 'btn'
