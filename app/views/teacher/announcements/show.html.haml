- content_for :toolbar do
  = link_to edit_teacher_announcement_path(@announcement ), class: 'btn btn-default' do
    %i.icon-pencil
    = t('action_button.edit')
.panel.panel-default
  .panel-heading
    %i.icon-edit.icon-large
    = t('tt.show', resource_name: Announcement.model_name.human)
  .panel-body
    = show_for @announcement do |s|
      = s.attribute :title
      = s.attribute :content
      = s.association :teacher
