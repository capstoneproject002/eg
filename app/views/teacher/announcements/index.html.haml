- content_for :toolbar do
  = link_to new_teacher_announcement_path, class: 'btn btn-default' do
    %i.icon-plus
    = t('action_button.new', resource_name: Announcement.model_name.human)

.panel.panel-default.grid
  =blankable(@announcements)
  .panel-footer
    .pagination.pagination-sm
      = will_paginate @announcements, renderer: BootstrapPagination::Rails, bootstrap: 3