.panel-heading
  %i.icon-table.icon-large
  = t('tt.index', resource_name: Announcement.model_name.human)
  .panel-tools
    .btn-group
      %a.btn{href: announcements_path, data: {toggle: 'toolbar-tooltip'}, title: 'Reload'}
        %i.icon-refresh
    .badge= @announcements.total_entries
.panel-body.filters

%table.table
  %thead
    %tr
      %th #
      %th= t('activerecord.attributes.announcement.title')
      %th= t('activerecord.attributes.announcement.teacher')
      %th= t('activerecord.attributes.announcement.created_at')
      %th.actions

  %tbody
    = render @announcements
